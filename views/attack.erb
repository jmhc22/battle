<% if @game.current_turn == @game.player_1 %>
<h1> <%= @game.player_1.name %> attacks <%= @game.player_2.name %> </h1>
<% else %>
<h1> <%= @game.player_2.name %> attacks <%= @game.player_1.name %> </h1>
<% end %>

<form action="/switch-turns" method="post">
  <input type="submit" value="OK">
</form>
